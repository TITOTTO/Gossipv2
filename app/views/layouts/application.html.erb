      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav me-auto">
        <li class="nav-item active">
          <a class="nav-link" href="/users">Accueil
          </a>
        </li>
        
      </ul>
      <% if logged_in? %>
          <a href="/gossip" class="btn btn-primary my-2">Découvre tous les gossip !</a>  
          <%= link_to "Se déconnecter", session_path(session[:user_id]), method: :delete, class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>        
      <% else %>
          <a href="/sessions/new" class="btn btn-primary my-2">Se connecter</a>
          <a href="/users/new" class="btn btn-primary my-2">Créer un utilisateur</a>
          <a href="/gossip" class="btn btn-primary my-2">Découvre tous les gossip !</a>
      <% end %>


      </form>
    </div>
  </div>
</nav>




